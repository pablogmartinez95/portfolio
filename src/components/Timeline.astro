---

<div class="px-4 lg:px-0">
  <ol class="relative border-s border-gray-200 dark:border-gray-700 lg:px-0">
    {
      EXPERIENCE_DATA.slice(0, 5).map((experience, index) => (
        <li class="mb-6 ms-4 px-2 py-2 rounded-md select-none hover:bg-white/10 hover:shadow-2xl hover:shadow-white/10 transition-all group">
          <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700" />
          <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">
            {experience.startDate}{" "}
            {experience.endDate.length ? `- ${experience.endDate}` : ""}
            {experience.totalTime.length ? `Â· ${experience.totalTime}` : ""}
          </time>
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white group-hover:text-yellow-500">
            {experience.title}
          </h2>
          <h3 class="text-md font-light text-gray-900/50 dark:text-white/50">
            {experience.company}
          </h3>
          <p class="mt-1.5 text-base font-normal text-gray-500 dark:text-gray-400">
            {experience.description}
          </p>
          <ul class="flex gap-x-2 flex-row mb-2 flex-wrap">
            {experience.technologies &&
              experience.technologies.map((technology, index) => (
                <li class="mt-1.5 text-base font-normal text-gray-500 dark:text-gray-400">
                  <span
                    class={`flex gap-x-2 rounded-lg text-xs ${technology.class} py-1 px-2 `}
                  >
                    <technology.icon class="size-4" />
                    {technology.name}
                  </span>
                </li>
              ))}
          </ul>
        </li>
      ))
    }
  </ol>
  <a
    href="#"
    class="flex gap-x-2 font-medium transition-all hover:text-yellow-500"
  >
    <span>Want to see more? Click here to view my full work experience</span>
    <ArrowRight />
  </a>
</div>
