import CSS from "./technologies/CSS.astro";
import PHP from "./technologies/PHP.astro";
import NodeJS from "./technologies/NodeJS.astro";
import TailwinCSS from "./technologies/TailwindCSS.astro";

import ArrowRight from "./icons/ArrowRight.astro";

const TECHNOLOGIES = {
  JS: {
    name: "JavaScript",
    class: "bg-yellow-300/25 text-white",
    icon: Javascript,
  },
  ANGULAR: {
    name: "Angular",
    class: "bg-red-600/25 text-white",
    icon: Angular,
  },
  NODEJS: {
    name: "Node.js",
    class: "bg-green-400/25 text-white",
    icon: NodeJS,
  },
  TYPESCRIPT: {
    name: "TypeScript",
    class: "bg-blue-600/25 text-white",
    icon: Typescript,
  },
  REACT: {
    name: "React",
    class: "bg-blue-600/25 text-white",
    icon: React,
  },
  HTML5: {
    name: "HTML5",
    class: "bg-orange-600/25 text-white",
    icon: HTML5,
  },
  CSS: {
    name: "CSS",
    class: "bg-sky-600/25 text-white",
    icon: CSS,
  },
  PHP: {
    name: "PHP",
    class: "bg-purple-600/25 text-white",
    icon: PHP,
  },
  TAILWINDCSS: {
    name: "Tailwind CSS",
    class: "bg-[#63BAF4]/25 text-white",
    icon: TailwinCSS,
  },
};

const EXPERIENCE_DATA = [
  //   {
  //     startDate: "Present",
  //     endDate: "",
  //     totalTime: "",
  //     title: "Software Development Engineer",
  //     company: "GlobalLogic",
  //     description: "",
  //   },
  {
    startDate: "Present",
    endDate: "",
    totalTime: "",
    title: "Frontend Developer",
    company: "Cargo Signal",
    description:
      "Migration of a web application developed in Angular to a higher version, with the goal of updating its UI to a more modern one, making improvements in performance, and generating robust, scalable, and reusable code by applying SOLID principles.",
    technologies: [
      TECHNOLOGIES.ANGULAR,
      TECHNOLOGIES.JS,
      TECHNOLOGIES.TYPESCRIPT,
      TECHNOLOGIES.HTML5,
      TECHNOLOGIES.TAILWINDCSS,
    ],
  },
  {
    startDate: "April 2023",
    endDate: "November 2023",
    totalTime: "8 months",
    title: "Full Stack Developer",
    company: "Belcorp",
    description:
      "Developed and maintained a web application for their clients, improved and maintained an reports system, and collaborated with a team to add new functionality to the web application.",
    technologies: [
      TECHNOLOGIES.ANGULAR,
      TECHNOLOGIES.JS,
      TECHNOLOGIES.NODEJS,
      TECHNOLOGIES.TYPESCRIPT,
      TECHNOLOGIES.HTML5,
      TECHNOLOGIES.CSS,
    ],
  },
  {
    startDate: "June 2021",
    endDate: "April 2023",
    totalTime: "1 year 10 months",
    title: "Full Stack Developer",
    company: "Engageware",
    description:
      "Worked primarily on improving and maintaining their web applications with high-quality and robust components.",
    technologies: [
      TECHNOLOGIES.HTML5,
      TECHNOLOGIES.CSS,
      TECHNOLOGIES.JS,
      TECHNOLOGIES.PHP,
    ],
  },
  {
    startDate: "September 2017",
    endDate: "June 2021",
    totalTime: "3 years 9 months",
    title: "Web Developer",
    company: "Compra Gamer",
