  JS: {
    name: "JavaScript",
    class: "bg-yellow-300/25 text-white",
    icon: Javascript,
  },
  ANGULAR: {
    name: "Angular",
    class: "bg-red-600/25 text-white",
    icon: Angular,
  },
  NODEJS: {
    name: "Node.js",
    class: "bg-green-400/25 text-white",
    icon: NodeJS,
  },
  TYPESCRIPT: {
    name: "TypeScript",
