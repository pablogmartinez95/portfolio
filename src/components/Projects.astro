    class: "bg-blue-600/25 text-white",
    icon: React,
  },
  HTML5: {
    name: "HTML5",
    class: "bg-orange-600/25 text-white",
    icon: HTML5,
  },
  CSS: {
    name: "CSS",
    class: "bg-sky-600/25 text-white",
    icon: CSS,
  },
  PHP: {
    name: "PHP",
    class: "bg-purple-600/25 text-white",
    icon: PHP,
  },
  ASTRO: {
    name: "Astro",
    class: "bg-white/15 text-white",
    icon: ASTRO,
  },
};

const PROJECTS = [
  {
    name: "99R Pastillas de freno",
    description:
      "Website for the mechanic workshop '99R Pastillas de Freno'. This page functions as a landing page and product catalog.",
    imageSrc: "/proyecto_99r.webp",
    link: "https://99r.com.ar/",
    technologies: [TECHNOLOGIES.ASTRO],
  },
